+static int mov_read_pitm(MOVContext *c, AVIOContext *pb, MOVAtom atom)
+{
+    int version = avio_r8(pb);
+    avio_rb24(pb);  /* flags */
+    c->primary_item_id = version ? avio_rb32(pb): avio_rb16(pb);
+    return 0;
+}
